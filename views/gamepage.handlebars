<div style="text-align:center">
  <div class="game-details">
    <h1> Game Title: {{title}}</h1>
    <img src="{{thumbnail}}" alt="Searched Game Thumbnail:{{title}}">
    <p>{{short_description}}</p>
    <a href="{{url}}" target="_blank">Click to play this game!</a>
    <hr>
    <h2>Reviews</h2>
    {{#each reviews}}
    <div class="review">
      <h3>Review Title: {{title}}</h3>
      <p>{{body}}</p>
      <p>Rating: {{rating}}</p>
      <p>Wrote By: {{username}}</p>
    </div>
    {{/each}}
  </div>

  {{#if logged_in}}
  <div class="new-review-form">
    <h2>Write a Review</h2>
    <form id="new-review-form">
      <input type="hidden" name="games_id" value="{{id}}">
      <div>
        <label for="title">Title</label>
        <input type="text" id="review-title" name="title">
      </div>
      <div>
        <label for="body">Review</label>
        <textarea id="review-body" name="body"></textarea>
      </div>
      <div>
        <label for="rating">Rating</label>
        <input type="number" id="review-rating" name="rating" min="1" max="10" step="0.1">
      </div>
      <button type="submit">Submit Review</button>
    </form>
  </div>
  {{/if}}
</div>

<script src="./js/gamepage.js"></script>